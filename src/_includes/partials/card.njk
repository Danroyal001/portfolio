<div class="col-xs-12 col-sm-6 col-lg-4">
  <div class="mdc-card">
    {% if element.src %}
      <img class="mdc-card__media mdc-card__media--16-9" src="{{element.src}}" alt="{{element.title}}" height="230" width="410" loading="lazy" {% if element.srcset %}srcset="{{element.srcset}}"{% endif %}>
    {% endif %}
    
    <div class="mdc-card-wrapper__text-section">
      <h2>{{element.title}}</h2>
    </div>
    
    <div class="mdc-card__content">
      <p>{{element.description | trim}}</p>
    </div>

    <div class="mdc-card__actions">
      <a class="mdc-button mdc-card__action mdc-card__action--button" target="_blank" href="{{element.url}}">
        <span class="mdc-button__ripple"></span>
        <span class="mdc-button__label">{{ buttonText or 'View' }}</span>
      </a>
    </div>
  </div>
</div>